@model List<Social_Media_Project.Models.MediaPost>

@{
    ViewData["Title"] = "UserAccountPage";
}

@if (TempData["errorMessage"] != null)
{
    <script>
        toastr.error("@TempData["errorMessage"]");
    </script>
}
@if (TempData["successMessage"] != null)
{
    <script>
        toastr.success("@TempData["successMessage"]");
    </script>
}

<style>
    .UserAccountPage-ProfileSection {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        width: 100%;
    }

    .UserAccountPage-Data {
        display: flex;
        justify-content: space-between;
        border: 1px solid #ddd;
        padding: 15px;
        max-width: 800px;
        margin: 0 auto;
    }

    .userAccountPage-ProfileImg {
        width: 100px;
        height: 100px;
        border: 2px solid #333;
        padding: 2px;
        border-radius: 50%;
    }

    .profilePicStyle {
        padding: 10px;
        width: 50%;
        text-align: center;
    }

    .profilePic-Align {
        display: flex;
        justify-content: center;
    }

    .fix-AlignHomePage {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
    }

    .UserAccountPage-BioSection {
        border: 1px solid #ddd;
        padding: 30px;
        width: 100%;
        max-width: 800px;
        margin: 20px auto;
        background-color: #f9f9f9;
    }

    .bioEdit {
        display: flex;
        justify-content: space-around;
        align-items: center;
        text-align: center;
        width: 100%;
        max-width: 800px;
        margin: 20px auto;
    }

    .childBioEdit {
        border: 1px solid #ddd;
        padding: 10px;
        background-color: #007bff;
        border-radius: 5px;
        text-decoration: none;
        color: white;
        font-weight: bold;
        cursor: pointer;
    }

        .childBioEdit:hover {
            background-color: #0056b3;
        }

    .homepage-PhotoSection {
        border: 1px solid #ddd;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        width: 100%;
        max-width: 800px;
        margin: 20px auto;
    }

    .PhotoSection-Child {
        flex: 1 1 calc(33.333% - 20px);
        box-sizing: border-box;
        border: 1px solid #ddd;
        overflow: hidden;
        position: relative;
    }

    .PhotoSectionImg {
        width: 100%;
        height: auto;
        display: block;
    }

    .PhotoSection-Child:hover .PhotoSectionImg {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    .ProfileStat {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

        .ProfileStat > div {
            font-weight: bold;
            font-size: 1.2em;
        }

            .ProfileStat > div:first-child {
                color: #333;
            }

            .ProfileStat > div:last-child {
                color: #777;
                font-size: 0.9em;
            }

    .bottom-buttons {
        display: flex;
        justify-content: space-around;
        width: 100%;
        max-width: 800px;
        margin: 20px auto;
    }

        .bottom-buttons a {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 5px;
            color: white;
            text-align: center;
            text-decoration: none;
            font-weight: bold;
            background-color: #007bff;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

            .bottom-buttons a:hover {
                background-color: #0056b3;
            }

            .bottom-buttons a.home {
                background-color: #28a745;
            }

            .bottom-buttons a.add-post {
                background-color: #ffc107;
            }

            .bottom-buttons a.search {
                background-color: #17a2b8;
            }

            .bottom-buttons a.feed {
                background-color: #dc3545;
            }
</style>

<div class="fix-AlignHomePage">
    <div>
        <div class="UserAccountPage-Data">
            <div class="profilePicStyle">
                <div class="profilePic-Align">
                    @* <img src="@ViewBag.ProfilePhotoPath" alt="Profile Photo" class="userAccountPage-ProfileImg" /> *@
                    <img src="~/images/userdata/dsc_0002.jpg" alt="Profile Photo" class="userAccountPage-ProfileImg" />
                </div>
                @* <div>@ViewBag.Fullname</div>   *@
                <div>Trilok Chand Swami</div>
            </div>
            <div class="UserAccountPage-ProfileSection">
                <div class="ProfileStat">
                    <div>6</div>
                    <div>posts</div>
                </div>
                <div class="ProfileStat">
                    <div>5</div>
                    <div>followers</div>
                </div>
                <div class="ProfileStat">
                    <div>5</div>
                    <div>following</div>
                </div>
            </div>
        </div>
        <div class="UserAccountPage-BioSection">
            <p><strong>10/02/2003</strong></p>
            @* <p><strong>@ViewBag.DateOfBirth</strong></p> *@
            <br />
            @*   <p>@ViewBag.Bio</p> *@
            <p>
                Talk is cheap. Show me the code." - Linus Torvalds
                "Perfection is achieved not when there is nothing more to add, but rather when there is nothing more to take away." - Antoine de Saint-Exupéry
                "Simplicity is the soul of efficiency." - Austin Freeman
                "Programs must be written for people to read, and only incidentally for machines to execute." - Harold Abelson
            </p>
        </div>
        <div class="UserAccountPage-BioSection bioEdit">
            <a class="childBioEdit" href="#">Edit Profile</a>
            <a class="childBioEdit" href="#">Share Profile</a>
        </div>
        <div class="homepage-PhotoSection">
            @*   @foreach (var post in Model)
            { *@
            <div class="PhotoSection-Child">
                @*       <img src="@post.PhotoPath" alt="Post Photo" class="PhotoSectionImg" /> *@
            </div>
            @* } *@
        </div>
        <div class="bottom-buttons">
            <a class="feed" href="@Url.Action("Feed","Account")">Following Feed</a>
            <a class="search" href="@Url.Action("SearchProfile","Account")">Search Profile</a>
            <a class="add-post" href="@Url.Action("CreatePost","Account")">Add Post</a>
            <a class="home" href="@Url.Action("UserAccountPage","Account")">Home</a>
        </div>
    </div>
</div>
