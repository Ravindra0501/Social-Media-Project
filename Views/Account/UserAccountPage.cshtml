@{
    ViewData["Title"] = "UserAccountPage";
}
@if (TempData["errorMessage"] != null)
{
    <script>
        toastr.error("@TempData["errorMessage"]");
    </script>
}
@if (TempData["successMessage"] != null)
{
    <script>
        toastr.success("@TempData["successMessage"]");
    </script>
}

<style>
    .UserAccountPage-ProfileSection {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        width: 100%;
    }

    .UserAccountPage-Data {
        display: flex;
        justify-content: space-evenly;
        border: 1px solid;
        padding: 15px;
    }

    .userAccountPage-ProfileImg {
        width: 100px;
        height: 100px;
        border: 1px solid black;
        padding: 2px;
        border-radius: 50%;
    }

    .profilePicStyle {
        padding: 10px;
        width: 20%;
        text-align: center
    }

    .profilePic-Align {
        display: flex;
        justify-content: center;
    }
</style>

<div class="UserAccountPage-Data">
    <div class="profilePicStyle">
        <div class="profilePic-Align"><img src="" alt="profile photo" class="userAccountPage-ProfileImg" /></div>
        <div>Trilok Chand Swami</div>
    </div>
    <div class="UserAccountPage-ProfileSection">
        <div>posts</div>
        <div>followers</div>
        <div>following</div>
    </div>
</div>
<div class="UserAccountPage-BioSection">
    <p>This is the Bio Section</p>
</div>
